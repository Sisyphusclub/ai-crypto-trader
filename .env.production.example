# AI Crypto Trader - Production Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================
# REQUIRED - Security (must be changed)
# ============================================================

# JWT secret for authentication (min 32 chars, high entropy)
JWT_SECRET=

# Master key for encrypting API keys/secrets (min 32 chars)
MASTER_KEY=

# ============================================================
# REQUIRED - Database & Redis
# ============================================================

# PostgreSQL connection
DB_USER=postgres
DB_PASSWORD=
DB_NAME=trader
DATABASE_URL=postgresql+psycopg://postgres:${DB_PASSWORD}@postgres:5432/${DB_NAME}

# Redis connection
REDIS_URL=redis://redis:6379/0

# ============================================================
# Trading Mode
# ============================================================

# Environment (dev/staging/production)
APP_ENV=production

# Paper trading mode (true = no real trades, RECOMMENDED for safety)
PAPER_TRADING=true

# REQUIRED when PAPER_TRADING=false
# Set to "I_UNDERSTAND" to confirm real funds will be used
# Leave empty until you are ready for live trading
LIVE_TRADING_CONFIRMATION=

# ============================================================
# Logging & Monitoring
# ============================================================

# Log level (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# JSON log format (true for production, false for development)
LOG_JSON=true

# Prometheus metrics
METRICS_ENABLED=true

# ============================================================
# Worker Configuration
# ============================================================

# Redis lock TTL in seconds
REDIS_LOCK_TTL=60

# Lock acquisition timeout in seconds
REDIS_LOCK_TIMEOUT=5

# Reconciliation lookback window in hours
RECONCILE_LOOKBACK_HOURS=24

# Reconciliation batch size
RECONCILE_BATCH_SIZE=100

# ============================================================
# Frontend
# ============================================================

# API URL for frontend (use internal Docker network URL in production)
NEXT_PUBLIC_API_URL=http://server:8000

# Node environment
NODE_ENV=production
